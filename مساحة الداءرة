<body>

<div class="box">
    <h2>حاسبة مساحة الدائرة</h2>

    <input type="number" id="radius" placeholder="أدخل نصف القطر">

    <button onclick="calculate()">احسب المساحة</button>

    <div id="result"></div>
</div>

<script>
function calculate() {
    let r = document.getElementById("radius").value;
    if (r <= 0) {
        document.getElementById("result").innerText = "أدخل قيمة صحيحة لنصف القطر!";
        return;
    }
    let area = Math.PI * r * r;
    document.getElementById("result").innerText = 
        "مساحة الدائرة = " + area.toFixed(2);
}
</script>

</body>
